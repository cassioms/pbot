{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "experimentalDecorators": true,
      "removeComments": true,
      "declaration": true,
      "paths": {
        "*": [
          "node_modules/*",
        ]
      },
      "typeRoots": [
        "node_modules/@types",
        "index.d.ts",
      ],
      "strict": true,
      "strictNullChecks": false,
      "strictFunctionTypes": false,
      // "strictBindCallApply": true,
      "lib": [
        "es6"
      ]
    },
    "include": [
      "src/**/*"
    ]
  }
  